<Window x:Class="MediaPlayer.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Protocol" Height="163" Width="411">
    <Grid Height="135">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,24,0,0" Name="textBox1" VerticalAlignment="Top" Width="364" />
        <Label Content="Please enter a network URL :" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" />
        <Button Content="Play" Height="23" HorizontalAlignment="Left" Margin="166,87,0,0" Name="PlayUrl" VerticalAlignment="Top" Width="55" Click="PlayUrl_Click" />
        <Label Content="It can take several minutes" Height="28" HorizontalAlignment="Left" Margin="117,104,0,0" Name="label2" VerticalAlignment="Top" Width="160" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,64,0,0" Name="urlSubtitle" VerticalAlignment="Top" Width="337" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="7,45,0,0" Name="textBlock1" Text="Subtitle (optional) :" VerticalAlignment="Top" />
        <Button Content="..." Height="23" HorizontalAlignment="Right" Margin="0,64,13,0" Name="loadSub" VerticalAlignment="Top" Width="29" Click="loadSubtitle_Click" />
    </Grid>
</Window>
